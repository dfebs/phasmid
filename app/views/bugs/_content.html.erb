<div id="<%= dom_id(bug, :content) %>" > 
    <h2><%= bug.title %></h2>
    <%= bug.description %>
    <p><b>Author: </b><%= bug.author.username %></p>
    <p><b>Created</b>: <%= bug.created_at.in_time_zone(Current.user.time_zone) %></p>
    <% if bug.tags.any? %>
        <%= render bug.tags %>
        Score: <%= get_bug_score bug %>
    <% end %>
    <br>
    <br>
</div>
