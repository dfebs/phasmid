<div id="<%= dom_id(bug, :content) %>" > 
    <h2><%= bug.title %></h2>
    <h3><%= "COMPLETED" if bug.completed %></h3>
    <p><%= bug.description %></p>
    <hr>
    <br>
    <% if bug.tags.any? %>
        <%= render bug.tags %>
        <span type="score">Bug Score: <%= get_bug_score bug %></span>
    <% end %>
    <p style="font-size: 14px;"><b>Author: </b><%= bug.author.username %> | 
        <b>Created</b>: <%= bug.created_at.in_time_zone(Current.user.time_zone) %>
    </p>
</div>
